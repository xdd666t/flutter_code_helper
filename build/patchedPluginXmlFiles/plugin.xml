<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <id>com.xdd.flutter_code_helper</id>
  <version>1.0</version>
  <change-notes>&lt;h1&gt;1.0&lt;/h1&gt;
&lt;ul&gt;
    &lt;li&gt;which can automatically generate defined folders and their subfolder&lt;/li&gt;
    &lt;li&gt;Preliminary completion function, &lt;/li&gt;
&lt;/ul&gt;</change-notes>
  <description>&lt;h2&gt;Flutter Code Helper&lt;/h2&gt;
&lt;ul&gt;
    &lt;h3&gt;Introduction&lt;/h3&gt;
    &lt;li&gt;usage: You need to add the following to pubspec.yaml&lt;/a&gt;&lt;/li&gt;
    &lt;br&gt;code_helper:&lt;br&gt;
      # fill in the folders you need to automatically generate&lt;br&gt;
      auto_folder: ["assets/", "lib/widgets/"]
&lt;/ul&gt;</description>
  <idea-version since-build="200.*" until-build="*.*" />
  <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>Flutter Code Helper</name>
  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="xdd666@foxmail.com" url="https://github.com/xdd666t">xdd666</vendor>
  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
     on how to target different products -->
  <depends>com.intellij.modules.all</depends>
  <depends>Dart</depends>
  <depends>org.jetbrains.kotlin</depends>
  <depends>io.flutter</depends>
  <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij" />
  <applicationListeners>
    <listener class="listener.MyProjectManagerListener" topic="com.intellij.openapi.project.ProjectManagerListener" />
  </applicationListeners>
  <actions>
    <!-- Add your actions here -->
    <action id="com.xdd.flutter_code_helper.GenerateDirAction" class="actions.GenerateDirAction" text="Flutter: Configuring Paths" description="Configuring Paths in pubspec.yaml" icon="AllIcons.Actions.BuildLoadChanges">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup" />
    </action>
  </actions>
</idea-plugin>
